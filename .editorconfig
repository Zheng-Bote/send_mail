root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,hpp,c,h,cc,hh,cxx,hxx}]
indent_size = 4
indent_style = space

[*.{cmake,CMakeLists.txt}]
indent_size = 4
indent_style = space

[*.{json,yaml,yml,md}]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab
